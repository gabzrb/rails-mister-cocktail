
 <h1>New Dose</h1>

  <%= simple_form_for [@cocktail, @dose] do |f| %>


  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.association :ingredient, collection: Ingredient.all%>
    </div>
  <div class="form-actions" class="btn btn-danger">
    <%= f.button :submit %>
  </div>
<% end %>
<%=link_to 'Back', cocktails_path%>
